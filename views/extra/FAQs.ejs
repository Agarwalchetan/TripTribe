<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <h1 class="text-center mb-4">🤯 Frequently Asked Questions</h1>
  <p class="text-center text-muted">Click to expand. Wisdom (and laughter) inside.👇</p>

  <div class="accordion styled-accordion mt-4" id="faqAccordion">

    <% const faqs = [
      { q: "🧳 What is TripTribe?", a: "TripTribe is your ultimate travel wingman — helping you plan, discover, and join awesome trips without annoying group chats or shady Google Docs." },
      { q: "🧠 Do I need to be smart to use TripTribe?", a: "Nope. If you can click a button and resist punching your screen when a form doesn’t load, you’re good to go." },
      { q: "🔐 Is my data safe?", a: "Safer than your ex’s secrets. We use encryption, secure storage, and absolutely no carrier pigeons." },
      { q: "👽 Do you sell my info to aliens?", a: "Not unless they offer free Mars trips. (Just kidding. We don’t sell data. Ever.)" },
      { q: "🧭 I’m lost. Help?", a: "Same. But if you mean the website, try the Home Page or just yell “TRIBEEE!” out loud. It won’t work, but it might confuse your cat." }
    ]; %>

    <% faqs.forEach((faq, i) => { %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= i %>">
          <button class="accordion-button collapsed d-flex justify-content-between align-items-center" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= i %>">
            <span><%= faq.q %></span>
            <span class="faq-arrow ms-auto"><i class="bi bi-chevron-down"></i></span>
          </button>
        </h2>
        <div id="collapse<%= i %>" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
          <div class="accordion-body">
            <%= faq.a %>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

  <div class="text-center mt-5">
    <a href="/listings" class="btn btn-warning">⬅️ Back to TripTribe</a>
  </div>
</div>
